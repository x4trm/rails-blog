<% if current_user.role == "admin" %>
  <div class="container">
    <h1 class="mt-3">New post</h1>
    <hr>
    <%= render "form", post: @post %>
    <div>
      <%= link_to "Back to posts", posts_path, class:"btn btn-secondary mt-3" %>
    </div>
  </div>
<% else %>
 <div class="container">
  <h1>You do not have access</h1>
  <h2>Only admin can create posts</h2>
  <%= link_to "Back to posts", posts_path, class:"btn btn-secondary"%>
  <%= link_to "Login", new_user_session_path, class:"btn btn-info"%>
 </div>
<% end %>