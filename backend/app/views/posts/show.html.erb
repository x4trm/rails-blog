<p style="color: green"><%= notice %></p>
<div class="container">
  <%= render @post %>

  <div>
    <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-info mb-2" %><br>
    <%= link_to "Back to posts", posts_path, class: "btn btn-secondary mb-2"%>

    <%= button_to "Delete", @post, method: :delete, class: "btn btn-danger" %>
  </div>
</div>